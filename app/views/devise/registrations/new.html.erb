<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_up', :default => "Sign up") %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :surname %>
        <%= f.text_field :surname, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :date_of_birth %>
        <%= f.date_field :date_of_birth, autofocus: true, class: "form-control" %>
      </div>
       <div class="form-group">
        <%= f.label :gender, "Gender: ", class: 'control-label'  %>
            <%= f.radio_button :gender, true %> <%= f.label :gender, "Female" %>
            <%= f.radio_button :gender, false %> <%= f.label :gender, "Male" %>
       </div>
      <div class="form-group">
        <%= f.label :country_code %> (India = 91 , USA = 1)
        <%= f.text_field :country_code, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :mobile %>
        <%= f.text_field :mobile, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :batch %>
            <%= f.select :batch, options_for_select(User::BATCH, f.object.batch) ,{:prompt => "Choose your Batch"},label: "Choose your favorite fruit:",class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :admission_class %>
        <%= f.select :admission_class, options_for_select(6 .. 12, f.object.admission_class) ,{:prompt => "Select Admission Class"} ,class: "form-control"%>
       </div>
      <div class="form-group">
        <%= f.label :admission_year %>
        <%= f.select :admission_year, options_for_select(1986 .. Date.today.year, f.object.admission_year) ,{:prompt => "Select Admission Year"} , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :passout_class %>
        <%= f.select :passout_class, options_for_select(6 .. 12, f.object.passout_class) ,{:prompt => "Select Passout Class"}, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :passout_year %>
        <%= f.select :passout_year, options_for_select(1986 .. Date.today.year+7, f.object.passout_year) ,{:prompt => "Select Passout Year"}, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :bloodgroup %>
            <%= f.select :bloodgroup, options_for_select(User::BLOODGROP, f.object.bloodgroup) ,{:prompt => "Select your Blood Group"},label: "Select your Blood Group:",class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :Native %>(Village/Town/City)
        <%= f.text_field :native_place, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :native_mandal %>
        <%= f.text_field :native_mandal, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :native_pin %>
        <%= f.text_field :native_pin, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :current_location %>(Village/Town/City)
        <%= f.text_field :current_location, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :current_state %>
        <%= f.text_field :current_state, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :current_country %>
        <%= f.text_field :current_country, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :education_qualification %>
        <%= f.text_field :education_qualification, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :working_sector %>
            <%= f.select :working_sector, options_for_select(User::WORKING_SECTOR, f.object.working_sector) ,{:prompt => "Select your Working Sector"},label: "Select your Working Sector:",class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :profession %>
        <%= f.text_field :profession, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
<!--         <%= f.label :industry %> -->
      <b>Industry (or) Institution</b>
        <%= f.text_field :industry, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_area :address, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :aboutme %>
        <%= f.text_area :aboutme, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :avatar,class: 'control-label'  %>
            <%= f.file_field :avatar, class: "file-loading", id: "input-4" %>
      </div>
      <%= flash[:recaptcha_error] %>
      <%= recaptcha_tags  theme: 'dark'%>
      <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>

<script src="https://www.google.com/recaptcha/api.js?render=reCAPTCHA_site_key"></script>
